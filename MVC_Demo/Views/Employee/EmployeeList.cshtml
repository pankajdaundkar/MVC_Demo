@{
    ViewData["Title"] = "EmployeeList";
}

<h1 style="text-align:center">Employee List</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee e in (IEnumerable<Employee>)ViewData["list"])
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Name</td>
                <td>@e.Salary</td>
            </tr>

        }
    </tbody>
</table>
